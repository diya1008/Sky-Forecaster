# Sky Forecaster Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_DEBUG=True
FLASK_CONFIG=development

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# NASA Earthdata Credentials
# Sign up at: https://urs.earthdata.nasa.gov/
NASA_EARTHDATA_USERNAME=your-nasa-username
NASA_EARTHDATA_PASSWORD=your-nasa-password

# OpenAQ API Key (optional)
# Get at: https://docs.openaq.org/
OPENAQ_API_KEY=your-openaq-api-key

# Database Configuration (if using a database)
# DATABASE_URL=sqlite:///sky_forecaster.db

# Logging Configuration
LOG_LEVEL=INFO
